@model IEnumerable<SibersDAL.Models.ProjectEmployees>

@{
    ViewBag.Title = "Employees working on projects";
}
<div class="well well-sm"><h1>Employees working on projects</h1></div>
<p>
    <a href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>&nbsp;Create a new Employees working on projects
    </a>
</p>
<hr />
<table class="table table-striped table-responsive table-hover table-bordered">
    <caption>Employees working on projects List</caption>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id=item.Id})">
                    <span class="glyphicon glyphicon-edit"></span>&nbsp;Edit
                </a>
                &nbsp;|&nbsp;
                <a href="@Url.Action("Details", new { id=item.Id})">
                    <span class="glyphicon glyphicon-list-alt"></span>&nbsp;Details
                </a>
                &nbsp;|&nbsp;
                <a href="@Url.Action("Delete", new { id=item.Id})">
                    <span class="glyphicon glyphicon-trash"></span>&nbsp;Delete
                </a>
            </td>
        </tr>
    }

</table>
